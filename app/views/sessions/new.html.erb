<div class="row">
	<div class="col-lg-12 container">
		<%= form_for :session, :url => login_path, :method => :post do |f| %>
			<div class="field">
				<%= f.text_field :email, :placeholder => "Email" %>
			</div>
			<div class="actions">
				<%= f.submit "Log in", :class => "btn btn-default" %>
			</div>
		<% end %>
	</div>
</div>
